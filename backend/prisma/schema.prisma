datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Image {
  id        Int     @id @default(autoincrement())
  filename  String
  url       String
  originalUrl String
  size      Int
  mimeType  String
  wordpressMediaId Int?
  wordpressUrl String?
  status    String  @default("pending") // pending, uploaded, published
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
