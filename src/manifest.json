{
  "manifest_version": 3,
  "name": "Image Scanner Extension",
  "version": "1.0.0",
  "description": "Scan all images from webpage and display in side panel",
  "permissions": ["sidePanel", "scripting", "activeTab", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open Image Scanner",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/pages/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
